@model IEnumerable<TravelExpertsData.Models.Agent>

@{
    ViewData["Title"] = "Meet The Team";
    ViewData["Page"] = "Team";
}

<div class="container px-4 py-5">
    <h2 class="pb-2 border-bottom page-title text-center">Meet the Travel Experts Team!</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4 py-5">
        @foreach (var agent in Model) 
        {
        <div class="col">
            <div class="d-flex flex-column align-items-center">
                    <img src="/images/@(agent.AgtFirstName.ToLower())_@(agent.AgtLastName.ToLower()).jpg" class="img-fluid agent-photo mb-3" alt="@($"{agent.AgtFirstName} {agent.AgtLastName}")">
                <h4 class="fw-semibold mb-3">@agent.AgtFirstName @agent.AgtLastName</h4>

                <ul class="list-group w-100"> 
                    <li class="list-group-item">Phone Number: @agent.AgtBusPhone</li>
                    <li class="list-group-item">Email: @agent.AgtEmail</li>
                    <li class="list-group-item">Position: @agent.AgtPosition</li>
                    @* <li class="list-group-item">Agency @agent.Agency.AgncyAddress</li> *@
                @* <li class="list-group-item">Address: <%= agent.address %>, <%= agent.city %>, <%= agent.province %>, <%= agent.postal %>, <%= agent.country %></li> *@
                </ul>
            </div>
        </div>
        }
        
    </div>
</div>

